[Unit]
Description=Reads the serialnumbers of the inverters
After=network.target
StartLimitIntervalSec=3600
StartLimitBurst=100
StartLimitAction=reboot

[Service]
Type=oneshot
EnvironmentFile=/etc/solarinvert/inverter.env
EnvironmentFile=-/etc/solarinvert/name.env
ExecStart=/usr/bin/log_solarinvert_name.sh "${UART}" "${ID_1}" "${ID_2}" "${ID_3}" "${ID_4}" "${ID_5}" "${NAME_1}" "${NAME_2}" "${NAME_3}" "${NAME_4}" "${NAME_5}"

[Install]
WantedBy=multi-user.target
